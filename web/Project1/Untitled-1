                function validatePaymentForm() {
                    if (document.updatePayment.payAmount.value == ""){
                        alert("Amount paid must be entered");
                        document.updatePayment.payAmount.focus();
                        return false;
                    }
                    if (document.updatePayment.name.options[document.updatePayment.selectedIndex].value == ""){
                        alert("Name must be selected");
                        document.updatePayment.name.focus();
                        return false;
                    }
                    if (document.updatePayment.payType.options[document.updatePayment.selectedIndex].value == ""){
                        alert("Amount type must be selected");
                        document.updatePayment.payType.focus();
                        return false;
                    }
                    return true;
                }
            </script>